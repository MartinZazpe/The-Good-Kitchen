<!DOCTYPE html>
<html>

<head>
  <title></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/index.css' />
  <!-- CSS only -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" rel="stylesheet" />
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <title>Home</title>
</head>

<body>
  <%- include("partials/header.ejs") %>
    <main>

      <div class="body-information">

        <div class="introduction-carousel-container">
          <div class="carouselItem wrapper goBehind">
            <div id="carousel-slider" class="carousel slide carousel-fade" data-ride="carousel" data-interval="5000">
              <!--Indicators-->
              <ol class="carousel-indicators">
                <li class="noShow" data-target="#carousel-slider" data-slide-to="0" class="active"></li>
                <li class="noShow" data-target="#carousel-slider" data-slide-to="1"></li>
                <li class="noShow" data-target="#carousel-slider" data-slide-to="2"></li>
              </ol>
              <!--Indicators-->
              <!--Slides-->
              <div class="carousel-inner" role="listbox">
                <!--First slide-->
                <div class="carousel-item active">
                  <img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/1.webp" alt="First slide">
                </div>
                <!--/First slide-->
                <!--Second slide-->
                <div class="carousel-item">
                  <!-- <p class=" d-block w-100"> The most amazing things </p> -->
                  <img class=" d-block w-100" src="/images/test3.webp" alt="a chococake">
                </div>
                <!--/Second slide-->
                <!--Third slide-->
                <div class="carousel-item">
                  <img class="d-block w-100" src="/images/test2.webp" alt="Third slide">
                </div>
                <!--/Third slide-->
              </div>
            </div>
          </div>

          <div class="introductionItem">
            <div class="introduction-flex-container">
              <p class="cake">&#127856</p>
              <section class="introduction">
                <h5 class="intro-title">Upload your recipe and share it with the world!</h5>
                </p>
              </section>
            </div>
          </div>
        </div>

        <section id="highest-ranked-section">

          <div class="most-popular-container">
            <h6 class="most-popular-title">Most popular</h6>
          </div>

          <div class="container">
            <% if(locals.TwoBestRanked) { %>
              <% for(let recipe of TwoBestRanked) {%>
                <div class="product-container">
                  <div class="image-avg-container">
                    <div class="imageContainer">
                      <a href="/recipes/detail/<%=recipe.id%>"><img class="recipe-image" src="/images/<%= recipe.image %>"></a>
                      <% if(recipe.ratingAvg> 0) { %>
                        <div class="AVGrating">
                          <div>
                            <h5>
                              <%= recipe.ratingAvg %> / 5 <i class="colorGold fa-sm fa-solid fa-star"></i>
                            </h5>
                          </div>
                        </div>
                        <% }%>
                    </div>
                  </div>
                  <div class="description-hyperlink ">
                    <h6>
                      <%=recipe.title %>
                    </h6>
                    <a class="detail-link noShow" href="/recipes/detail/<%=recipe.id%>">Check out the full recipe...</a>
                    <% for(let user of allUsers) { %>
                      <% if(user.id==recipe.belongsTo) {%>
                        <div class="user-product-container">
                          <img class="user-product-thumbnail" src="/images/userImages/<%=user.image %>" alt="user-image">
                          <div class="user-product-container-userDetails">
                            <p class="user-product-username">
                              <%=user.name %>
                            </p>
                            <p>Community member</p>
                          </div>
                        </div>
                        <% } %>
                          <% } %>
                  </div>
                </div>
                <% } %>
                  <% } %>
          </div>



        </section>



        <section id="latest-recipes-section">
          <div class="title-container">
            <h6 class="latest-recipes-title">Recent uploads</h6>
          </div>
          <div class="container container-fix">
            <% for(let recipe of recipes) {%>
              <div class="product-container">
                <div class="image-avg-container">
                  <div class="imageContainer">
                    <a href="/recipes/detail/<%=recipe.id%>"><img class="recipe-image" src="/images/<%= recipe.image %>"></a>
                    <% if(recipe.ratingAvg> 0) { %>
                      <div class="AVGrating">
                        <div>
                          <h5>
                            <%= recipe.ratingAvg %> / 5 <i class="colorGold fa-sm fa-solid fa-star"></i>
                          </h5>
                        </div>
                      </div>
                      <% }%>
                  </div>
                </div>
                <div class="description-hyperlink ">
                  <h6>
                    <%=recipe.title %>
                  </h6>
                  <a class="detail-link noShow" href="/recipes/detail/<%=recipe.id%>">Check out the full recipe...</a>
                  <% for(let user of allUsers) { %>
                    <% if(user.id==recipe.belongsTo) {%>
                      <div class="user-product-container">
                        <img class="user-product-thumbnail" src="/images/userImages/<%=user.image %>" alt="user-image">
                        <div class="user-product-container-userDetails">
                          <p class="user-product-username">
                            <%=user.name %>
                          </p>
                          <p>Community member</p>
                        </div>
                      </div>
                      <% } %>
                        <% } %>
                </div>
              </div>
              <% } %>
          </div>
        </section>
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
</body>

</html>